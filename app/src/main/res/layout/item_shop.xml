<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/main_padding"
    android:layout_marginEnd="@dimen/main_padding"
    android:background="@color/white"
    android:layout_marginBottom="20dp"
    android:elevation="10dp"
    android:layout_width="match_parent"
    android:layout_height="230dp">


    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/ivBackground"
        android:layout_width="match_parent"
        android:layout_height="140dp"/>

    <TextView
        android:id="@+id/tvDayTime"
        android:text="ხუთშაბათი 22:30 - 05:00"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@color/black_trasparent_20"
        app:layout_constraintTop_toTopOf="@+id/ivBackground"
        app:layout_constraintBottom_toBottomOf="@+id/ivBackground"
        app:layout_constraintStart_toStartOf="@+id/ivBackground"
        app:layout_constraintEnd_toEndOf="@+id/ivBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <ImageView
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/main_padding"
        app:layout_constraintTop_toBottomOf="@+id/ivBackground"
        android:src="@drawable/ic_profile_main_nav"
        android:id="@+id/ivShopIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"/>

    <TextView
        android:id="@+id/tvName"
        android:text="გუდვილი საბურთალო"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/ivShopIcon"
        app:layout_constraintBottom_toBottomOf="@+id/ivShopIcon"
        app:layout_constraintStart_toEndOf="@+id/ivShopIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvIsActive"
        android:textSize="12sp"
        android:text="no delivery"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="@dimen/main_padding"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_marginEnd="5dp"
        android:rating="4.435345"
        android:progressTint="#FFA500"
        style="@style/Widget.AppCompat.RatingBar.Small"
        app:layout_constraintEnd_toStartOf="@+id/tvReviewCount"
        app:layout_constraintTop_toTopOf="@+id/tvIsActive"
        app:layout_constraintBottom_toBottomOf="@+id/tvIsActive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvReviewCount"
        android:text="45"
        android:textColor="@color/black"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvIsActive"
        app:layout_constraintBottom_toBottomOf="@+id/tvIsActive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



</androidx.constraintlayout.widget.ConstraintLayout>